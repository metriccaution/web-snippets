{
  "name": "dnd-spell-book",
  "version": "1.0.0",
  "description": "A reference tool for playing Dungeons & Dragons (5th edition) - Allows for searching through spells your character can cast.\n\nBy default, this contains freely-licensed material (under the SRD), but allows for extension with homebrew content.",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "start": "sirv public",
    "validate": "svelte-check",
    "test": "prettier --write '{public,src}/**/*.{ts,css,html,json}' '*.{json,md}' && npm run validate && jest"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^4.0.0",
    "@tsconfig/svelte": "^1.0.10",
    "@types/jest": "^26.0.14",
    "babel-jest": "^26.3.0",
    "jest": "^26.4.2",
    "prettier": "^2.1.1",
    "rollup": "^2.26.9",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-svelte": "^6.1.1",
    "rollup-plugin-terser": "^7.0.1",
    "svelte": "^3.24.1",
    "svelte-check": "^1.0.32",
    "svelte-preprocess": "^4.2.1",
    "tslib": "^2.0.1",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "@types/lodash": "^4.14.161",
    "@types/marked": "^1.1.0",
    "flexsearch": "^0.6.32",
    "lodash": "^4.17.20",
    "marked": "^2.0.0",
    "sirv-cli": "^1.0.6"
  }
}
